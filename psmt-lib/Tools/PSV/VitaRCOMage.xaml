<Window x:Class="VitaRCOMage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:psmt_lib"
             mc:Ignorable="d" 
             Height="120" Width="365" Background="#FF252525" ResizeMode="CanMinimize" Title="Vita RCO Data Table Extractor">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Select a .rco file :" VerticalAlignment="Top" Foreground="White" FontSize="14"/>
        <Button x:Name="BrowseRCOFileButton" Content="Browse" HorizontalAlignment="Left" Margin="265,33,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="SelectedRCOFileTextBox" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Width="250"/>
        <Button x:Name="ExtractButton" Content="Extract" HorizontalAlignment="Left" Margin="185,57,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
